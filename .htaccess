# ============================================
# LE REBOND - URL Rewriting
# URLs propres vers /page/ (index.html)
# ============================================

DirectoryIndex index.html
RewriteEngine On

# Rediriger les anciennes URLs .html vers /page/ (301)
RewriteCond %{THE_REQUEST} \\s/([^.]+)\\.html[\\s?] [NC]
RewriteRule ^ /%1/ [R=301,L]

# Forcer le slash final si dossier
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ /$1/ [R=301,L]
